@model EExamWebApp.ViewModels.ExamViewModel

<h2>@Model.Title</h2>

@using (Html.BeginForm("SubmitExam", "Exams", FormMethod.Post))
{
    @Html.HiddenFor(model => model.ExamId)

    for (int i = 0; i < Model.Questions.Count; i++)
    {
        <div>
            <h3>@Model.Questions[i].QuestionText</h3>
            @foreach (var option in Model.Questions[i].Options)
            {
                <label>
                    @Html.RadioButtonFor(model => model.Questions[i].SelectedOptionId, option.OptionId)
                    @option.OptionText
                </label>
            }
        </div>
    }


    <button type="submit" class="btn btn-primary">Finish Exam</button>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}