@model List<EExamWebApp.Models.Course>

@{
    ViewBag.Title = "Courses List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>
<p>Logged in as: <strong>@ViewBag.UserRole</strong></p>

<table class="table">
    <thead>
    <tr>
        <th>Course Name</th>
        <th>Description</th>
        <!-- Add other columns as needed -->
    </tr>
    </thead>
    <tbody>
    @foreach (var course in Model)
    {
        <tr>
            <td>@course.Title</td>
            <td>@course.Description</td>
            <!-- Display other course properties as needed -->
        </tr>
    }
    </tbody>
</table>